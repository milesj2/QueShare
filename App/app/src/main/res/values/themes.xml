<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bump" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/off_white</item>

        <item name="colorAccent">@color/blue_200</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/off_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>

        <item name="backgroundGradient">@drawable/bg_grad_main</item>

    </style>

    <style name="Theme.QueShare.QRDialog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="backgroundColor">#AA000000</item>
    </style>

    <style name="Theme.QueShare.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/off_white</item>
    </style>

    <style name="Theme.Bump.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bump.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DefaultText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/off_white</item>
    </style>
    <style name="DefaultTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/off_white</item>
    </style>

    <style name="Theme.Bump.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Icon" >
        <item name="android:background">@drawable/shape_circle_sml</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/off_white</item>
    </style>

    
</resources>