<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.QueShare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/off_white</item>

        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/off_white</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>

        <item name="backgroundGradient">@drawable/bg_grad_main_dark</item>
    </style>

    <style name="Theme.QueShare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QueShare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">@color/purple_700</item>
    </style>

    <style name="Theme.QueShare.DefaultText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/off_white</item>
    </style>

    <style name="Theme.QueShare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.QueShare.Icon" >
        <item name="android:background">@drawable/shape_circle_sml</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Theme.QueShare.CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/off_white</item>
    </style>


</resources>