<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ga.kojin.bump">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bump">
        <activity
            android:name=".ui.bump.QRScanActivity"
            android:theme="@style/Theme.Bump.NoActionBar">
        </activity>
        <activity
            android:name=".ui.bump.qrshare.QRShareActivity"
            android:theme="@style/Theme.Bump.NoActionBar">
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Bump.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.contactview.ContactViewActivity"
            android:theme="@style/Theme.Bump.NoActionBar">
        </activity>
        <activity
            android:name=".ui.bump.NetworkBump"
            android:label="@string/app_name"
            android:theme="@style/Theme.Bump.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="bump" android:host="ga.kojin.bump" android:path="/share" />
            </intent-filter>
        </activity>
    </application>

</manifest>